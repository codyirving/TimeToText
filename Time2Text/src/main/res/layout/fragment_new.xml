<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_new"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="0dp"
        android:text="Text message destination:"

         />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:hint="Enter number to text..."
        android:id="@+id/textView_phone_new"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView_contactName_new"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose from Contacts"
        android:id="@+id/button_contacts_new"
        android:layout_gravity="right" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText_message"
        android:hint="Enter message to send here..."

        android:inputType="textMultiLine|textCapSentences"

        android:layout_gravity="center"
    android:layout_weight="4"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:gravity="top"
    android:typeface="serif"
    android:visibility="visible"

    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:gravity="right"

    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button_cancel_new"
        android:layout_gravity="left" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:id="@+id/button_ok_new"
        android:layout_gravity="right" />

</LinearLayout>
    </LinearLayout>