    <Button

        android:text="Time to Text"
        android:id="@+id/timetotext"




        android:background="@drawable/custom_button"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textColor="@color/White"
        android:layout_marginBottom="1dp"
        />

    <TextView

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Now"
        android:id="@+id/timetotextdisplay"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/White"
        android:layout_toRightOf="@id/timetotext"
        android:textSize="50sp"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_margin="0dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="Date to Text"
        android:id="@+id/datetotext"
        android:background="@drawable/custom_button"
        android:layout_below="@id/timetotext"
        android:saveEnabled="true"
        android:textColor="@color/White"
        android:layout_marginBottom="1dp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Today"
        android:fontFamily="sans-serif-light"
        android:id="@+id/datetotextdisplay"
        android:textColor="@color/White"
        android:layout_toRightOf="@id/datetotext"
        android:layout_below="@id/timetotextdisplay"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="Message to Text"
        android:id="@+id/messagetotext"
        android:background="@drawable/custom_button"
        android:layout_below="@id/datetotext"
        android:saveEnabled="true"
        android:textColor="@color/White"
        android:layout_marginBottom="1dp"
      />
<!--    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
