    <TextView
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:fillViewport="true"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Have a Nice Day!"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/White"
        android:id="@+id/messagetotextdisplay"
        android:layout_below="@id/datetotextdisplay"
        android:layout_toRightOf="@id/messagetotext"

        />
<!--</ScrollView>-->

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="Contact to Text"
        android:id="@+id/contacttotext"
        android:layout_below="@id/messagetotext"
        android:saveEnabled="true"
        android:textColor="@color/White"
        android:background="@drawable/custom_button"
        />

